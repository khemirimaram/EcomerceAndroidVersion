<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".AddProductActivity">

    <!-- Titre de la page -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un produit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Formulaire dans un ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nom du produit -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom du produit *"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Exemple: Calculatrice scientifique"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description *"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:gravity="top"
                android:hint="Décrivez l'état, les caractéristiques et l'utilisation de votre produit"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="12dp"/>

            <!-- Prix et Quantité sur la même ligne -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Prix -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prix (TND) *"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:minHeight="48dp"
                        android:padding="12dp"/>
                </LinearLayout>

                <!-- Quantité -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantité *"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="1"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:text="1"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Catégorie et État sur la même ligne -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Catégorie -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catégorie *"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/spinner_background"
                        android:minHeight="48dp"
                        android:padding="12dp"/>
                </LinearLayout>

                <!-- État -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="État *"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <Spinner
                        android:id="@+id/spinnerCondition"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/spinner_background"
                        android:minHeight="48dp"
                        android:padding="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Images du produit -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Images du produit *"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Obligatoire - Max 5 images, 20MB par image)"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnSelectImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choisir des images"
                android:backgroundTint="@color/white"
                android:textColor="@color/primary_blue"
                android:drawableStart="@drawable/ic_add_photo"
                android:drawablePadding="8dp"
                android:padding="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <TextView
                android:id="@+id/tvImageCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/5 images sélectionnées"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <!-- Disponible pour échange -->
            <CheckBox
                android:id="@+id/cbExchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disponible pour échange"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>

            <!-- Préférences d'échange -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Préférences d'échange *"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/etExchangePreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="top"
                android:hint="Contre quels produits seriez-vous prêt à échanger?"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="12dp"/>

            <!-- Sponsoriser l'annonce -->
            <CheckBox
                android:id="@+id/cbSponsor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sponsoriser l'annonce pour plus de visibilité"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>

            <!-- Niveaux de sponsorisation -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niveau de sponsorisation"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <!-- Options de sponsorisation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Basique -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBasic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Basique"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5 TND"
                            android:textAlignment="center"
                            android:textColor="@color/primary_blue"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Affichage prioritaire"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• 3 jours de mise en avant"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Premium -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPremium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Premium"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10 TND"
                            android:textAlignment="center"
                            android:textColor="@color/primary_blue"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Badge 'Premium'"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• 7 jours de mise en avant"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Exclusif -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardExclusive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Exclusif"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15 TND"
                            android:textAlignment="center"
                            android:textColor="@color/primary_blue"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Badge 'Exclusif'"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• 14 jours de mise en avant"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Add submit button here -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:text="Publier le produit"
                android:textAllCaps="false"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Boutons en bas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/white"
            android:text="Annuler"
            android:textAllCaps="false"
            android:textColor="@color/text_gray"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <Button
            android:id="@+id/btnSubmitBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/primary_blue"
            android:text="Publier l'annonce"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout> 