<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".AddProductActivity">

    <!-- Titre de la page -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un produit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Formulaire dans un ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nom du produit -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom du produit *"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Exemple: Calculatrice scientifique"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description *"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:gravity="top"
                android:hint="Décrivez l'état, les caractéristiques et l'utilisation de votre produit"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="12dp"/>

            <!-- Prix et Quantité sur la même ligne -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Prix -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prix (TND) *"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:minHeight="48dp"
                        android:padding="12dp"/>
                </LinearLayout>

                <!-- Quantité -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantité *"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="1"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:text="1"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Catégorie et État sur la même ligne -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Catégorie -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catégorie *"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        style="@style/SpinnerStyle"
                        android:popupBackground="@android:color/white"/>
                </LinearLayout>

                <!-- État -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="État *"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <Spinner
                        android:id="@+id/spinnerCondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        style="@style/SpinnerStyle"
                        android:popupBackground="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Images du produit -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Images du produit *"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Obligatoire - Max 5 images, 20MB par image)"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnSelectImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choisir des images"
                android:backgroundTint="@color/white"
                android:textColor="@color/primary_blue"
                android:drawableStart="@drawable/ic_add_photo"
                android:drawablePadding="8dp"
                android:padding="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <TextView
                android:id="@+id/tvImageCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/5 images sélectionnées"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <!-- Disponible pour échange -->
            <CheckBox
                android:id="@+id/cbExchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disponible pour échange"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>

            <!-- Préférences d'échange -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Préférences d'échange *"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/etExchangePreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="top"
                android:hint="Contre quels produits seriez-vous prêt à échanger?"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="12dp"/>

            <!-- Boutons d'action -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Annuler"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Publier"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout> 